<UserControl x:Class="_3DObjectViewer.Views.Controls.LightingControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="220">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">
            <TextBlock Text="Lighting Controls" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            
            <!-- Light Sources -->
            <GroupBox Header="Light Sources" Margin="0,0,0,10">
                <StackPanel Margin="5">
                    <ComboBox ItemsSource="{Binding Lighting.LightSources}" 
                              SelectedItem="{Binding Lighting.SelectedLight}"
                              DisplayMemberPath="Name"
                              Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Add Light" Command="{Binding Lighting.AddLightCommand}" 
                                Width="80" Margin="0,0,5,0"/>
                        <Button Content="Remove" Command="{Binding Lighting.RemoveLightCommand}" 
                                Width="80" Background="#FFDDDD"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Selected Light -->
            <GroupBox Header="Selected Light" Margin="0,0,0,10"
                      DataContext="{Binding Lighting.SelectedLight}">
                <StackPanel Margin="5">
                    <!-- Light Position -->
                    <TextBlock Text="Fixture Position:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    
                    <TextBlock Text="Position X:" Margin="0,3,0,0"/>
                    <Slider Minimum="-10" Maximum="10" Value="{Binding PositionX}" 
                            SmallChange="0.5" LargeChange="1"/>
                    <TextBlock Text="{Binding PositionX, StringFormat={}{0:F1}}" HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="Position Y:" Margin="0,3,0,0"/>
                    <Slider Minimum="-10" Maximum="10" Value="{Binding PositionY}" 
                            SmallChange="0.5" LargeChange="1"/>
                    <TextBlock Text="{Binding PositionY, StringFormat={}{0:F1}}" HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="Position Z:" Margin="0,3,0,0"/>
                    <Slider Minimum="1" Maximum="15" Value="{Binding PositionZ}" 
                            SmallChange="0.5" LargeChange="1"/>
                    <TextBlock Text="{Binding PositionZ, StringFormat={}{0:F1}}" HorizontalAlignment="Center"/>
                    
                    <Separator Margin="0,8"/>
                    
                    <!-- Light Direction -->
                    <TextBlock Text="Light Direction:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    
                    <TextBlock Text="Direction X:" Margin="0,3,0,0"/>
                    <Slider Minimum="-1" Maximum="1" Value="{Binding DirectionX}" 
                            SmallChange="0.1" LargeChange="0.25"/>
                    <TextBlock Text="{Binding DirectionX, StringFormat={}{0:F2}}" HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="Direction Y:" Margin="0,3,0,0"/>
                    <Slider Minimum="-1" Maximum="1" Value="{Binding DirectionY}" 
                            SmallChange="0.1" LargeChange="0.25"/>
                    <TextBlock Text="{Binding DirectionY, StringFormat={}{0:F2}}" HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="Direction Z:" Margin="0,3,0,0"/>
                    <Slider Minimum="-1" Maximum="0" Value="{Binding DirectionZ}" 
                            SmallChange="0.1" LargeChange="0.25"/>
                    <TextBlock Text="{Binding DirectionZ, StringFormat={}{0:F2}}" HorizontalAlignment="Center"/>
                    
                    <Separator Margin="0,8"/>
                    
                    <!-- Light Color -->
                    <TextBlock Text="Light Color:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Preview:" VerticalAlignment="Center" Width="50"/>
                        <Border Width="40" Height="20" BorderBrush="Gray" BorderThickness="1">
                            <Border.Background>
                                <SolidColorBrush Color="{Binding Color}"/>
                            </Border.Background>
                        </Border>
                    </StackPanel>
                    
                    <TextBlock Text="Red:" Margin="0,3,0,0"/>
                    <Slider Minimum="0" Maximum="255" Value="{Binding ColorR}" 
                            SmallChange="1" LargeChange="10"/>
                    <TextBlock Text="{Binding ColorR}" HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="Green:" Margin="0,3,0,0"/>
                    <Slider Minimum="0" Maximum="255" Value="{Binding ColorG}" 
                            SmallChange="1" LargeChange="10"/>
                    <TextBlock Text="{Binding ColorG}" HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="Blue:" Margin="0,3,0,0"/>
                    <Slider Minimum="0" Maximum="255" Value="{Binding ColorB}" 
                            SmallChange="1" LargeChange="10"/>
                    <TextBlock Text="{Binding ColorB}" HorizontalAlignment="Center"/>
                    
                    <Separator Margin="0,8"/>
                    
                    <!-- Brightness -->
                    <TextBlock Text="Brightness:" Margin="0,5,0,0"/>
                    <Slider Minimum="0" Maximum="1" Value="{Binding Brightness}" 
                            SmallChange="0.05" LargeChange="0.1"/>
                    <TextBlock Text="{Binding Brightness, StringFormat={}{0:P0}}" HorizontalAlignment="Center"/>
                </StackPanel>
            </GroupBox>

            <!-- Quick Presets -->
            <GroupBox Header="Quick Presets" Margin="0,0,0,10">
                <StackPanel Margin="5">
                    <Button Content="Daylight" Click="PresetDaylight_Click" Margin="0,0,0,3"/>
                    <Button Content="Sunset" Click="PresetSunset_Click" Margin="0,0,0,3"/>
                    <Button Content="Moonlight" Click="PresetMoonlight_Click" Margin="0,0,0,3"/>
                    <Button Content="Studio" Click="PresetStudio_Click"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
