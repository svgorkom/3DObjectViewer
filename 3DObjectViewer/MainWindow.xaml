<Window x:Class="_3DObjectViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:h="http://helix-toolkit.org/wpf"
        xmlns:controls="clr-namespace:_3DObjectViewer.Views.Controls"
        mc:Ignorable="d"
        Title="3D Object Viewer" Height="850" Width="1400">
    
    <!--
    ============================================================================
    MAIN WINDOW LAYOUT
    ============================================================================
    Three synchronized viewports: Perspective (main), Top, and Side views.
    
    Coordinate System: X-Right, Y-Forward, Z-Up (right-handed)
    ============================================================================
    -->
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Control Panel -->
        <controls:ObjectControlPanel Grid.Column="0" DataContext="{Binding}"/>

        <!-- Viewports -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="3"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Main Perspective Viewport -->
            <Grid Grid.Row="0">
                <h:HelixViewport3D x:Name="HelixViewport"
                                   Background="{StaticResource SkyBackgroundBrush}"
                                   ShowCoordinateSystem="True"
                                   ZoomExtentsWhenLoaded="True"
                                   MouseDown="HelixViewport_MouseDown"
                                   MouseMove="HelixViewport_MouseMove"
                                   MouseUp="HelixViewport_MouseUp">
                    
                    <h:HelixViewport3D.Camera>
                        <PerspectiveCamera Position="15,15,12" 
                                           LookDirection="-15,-15,-12" 
                                           UpDirection="0,0,1" 
                                           FieldOfView="45"/>
                    </h:HelixViewport3D.Camera>

                    <!-- Lighting -->
                    <ModelVisual3D x:Name="AmbientLightVisual">
                        <ModelVisual3D.Content>
                            <AmbientLight Color="#606060"/>
                        </ModelVisual3D.Content>
                    </ModelVisual3D>
                    
                    <ModelVisual3D>
                        <ModelVisual3D.Content>
                            <DirectionalLight Color="#FFFEF0" Direction="-1,-1,-1"/>
                        </ModelVisual3D.Content>
                    </ModelVisual3D>
                    
                    <!-- Ground Plane -->
                    <h:RectangleVisual3D x:Name="GroundPlane" 
                                         Width="40" Length="40" 
                                         Origin="0,0,-0.01" Normal="0,0,1" LengthDirection="1,0,0">
                        <h:RectangleVisual3D.Material>
                            <DiffuseMaterial>
                                <DiffuseMaterial.Brush>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="{StaticResource GrassColor1}" Offset="0"/>
                                        <GradientStop Color="{StaticResource GrassColor2}" Offset="0.3"/>
                                        <GradientStop Color="{StaticResource GrassColor3}" Offset="0.7"/>
                                        <GradientStop Color="{StaticResource GrassColor1}" Offset="1"/>
                                    </LinearGradientBrush>
                                </DiffuseMaterial.Brush>
                            </DiffuseMaterial>
                        </h:RectangleVisual3D.Material>
                        <h:RectangleVisual3D.BackMaterial>
                            <DiffuseMaterial Brush="{StaticResource WallBrush}"/>
                        </h:RectangleVisual3D.BackMaterial>
                    </h:RectangleVisual3D>
                    
                    <!-- Grid Lines -->
                    <h:GridLinesVisual3D Width="20" Length="20" 
                                         MajorDistance="2" MinorDistance="1" 
                                         Thickness="0.01" Center="0,0,0.02"/>

                    <!-- Arena Walls (4 sides) -->
                    <h:RectangleVisual3D Width="20" Length="4" Origin="0,10,2" Normal="0,-1,0" LengthDirection="0,0,1">
                        <h:RectangleVisual3D.Material><DiffuseMaterial Brush="{StaticResource WallBrush}"/></h:RectangleVisual3D.Material>
                        <h:RectangleVisual3D.BackMaterial><DiffuseMaterial Brush="{StaticResource WallBrush}"/></h:RectangleVisual3D.BackMaterial>
                    </h:RectangleVisual3D>
                    
                    <h:RectangleVisual3D Width="20" Length="4" Origin="0,-10,2" Normal="0,1,0" LengthDirection="0,0,1">
                        <h:RectangleVisual3D.Material><DiffuseMaterial Brush="{StaticResource WallBrush}"/></h:RectangleVisual3D.Material>
                        <h:RectangleVisual3D.BackMaterial><DiffuseMaterial Brush="{StaticResource WallBrush}"/></h:RectangleVisual3D.BackMaterial>
                    </h:RectangleVisual3D>
                    
                    <h:RectangleVisual3D Width="20" Length="4" Origin="10,0,2" Normal="-1,0,0" LengthDirection="0,0,1">
                        <h:RectangleVisual3D.Material><DiffuseMaterial Brush="{StaticResource WallBrush}"/></h:RectangleVisual3D.Material>
                        <h:RectangleVisual3D.BackMaterial><DiffuseMaterial Brush="{StaticResource WallBrush}"/></h:RectangleVisual3D.BackMaterial>
                    </h:RectangleVisual3D>
                    
                    <h:RectangleVisual3D Width="20" Length="4" Origin="-10,0,2" Normal="1,0,0" LengthDirection="0,0,1">
                        <h:RectangleVisual3D.Material><DiffuseMaterial Brush="{StaticResource WallBrush}"/></h:RectangleVisual3D.Material>
                        <h:RectangleVisual3D.BackMaterial><DiffuseMaterial Brush="{StaticResource WallBrush}"/></h:RectangleVisual3D.BackMaterial>
                    </h:RectangleVisual3D>

                </h:HelixViewport3D>

                <!-- Performance Stats Overlay -->
                <Border Style="{StaticResource StatsOverlayBorderStyle}"
                        DataContext="{Binding PerformanceStats}">
                    <StackPanel>
                        <!-- FPS -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="FPS: " Foreground="{StaticResource OverlayTextDimBrush}" FontSize="14" FontWeight="Bold"/>
                            <TextBlock Text="{Binding FpsText}" Foreground="{StaticResource FpsGreenBrush}" FontSize="14" FontWeight="Bold"/>
                        </StackPanel>
                        
                        <!-- FPS Graph -->
                        <Grid Width="150" Height="40" Margin="0,5,0,0">
                            <Canvas>
                                <Line X1="0" Y1="0" X2="150" Y2="0" Stroke="{StaticResource GridLineHintBrush}" StrokeThickness="0.5"/>
                                <Line X1="0" Y1="20" X2="150" Y2="20" Stroke="{StaticResource GridLineHintBrush}" StrokeThickness="0.5"/>
                                <Line X1="0" Y1="40" X2="150" Y2="40" Stroke="{StaticResource GridLineHintBrush}" StrokeThickness="0.5"/>
                            </Canvas>
                            <Canvas ClipToBounds="True">
                                <Polyline Points="{Binding FpsGraphPoints}" Stroke="{StaticResource FpsGreenBrush}" 
                                          StrokeThickness="1.5" StrokeLineJoin="Round"/>
                            </Canvas>
                            <TextBlock Text="120" Style="{StaticResource AxisLabelStyle}" FontSize="8" 
                                       HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBlock Text="0" Style="{StaticResource AxisLabelStyle}" FontSize="8" 
                                       HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                        </Grid>
                        
                        <Rectangle Style="{StaticResource StatsSeparatorStyle}" Margin="0,8,0,6"/>
                        
                        <!-- Stats -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Frame Time: " Style="{StaticResource StatsLabelStyle}"/>
                            <TextBlock Text="{Binding FrameTimeText}" Style="{StaticResource StatsValueStyle}"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                            <TextBlock Text="Objects: " Style="{StaticResource StatsLabelStyle}"/>
                            <TextBlock Text="{Binding ObjectCountText}" Style="{StaticResource StatsValueStyle}"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                            <TextBlock Text="Triangles: " Style="{StaticResource StatsLabelStyle}"/>
                            <TextBlock Text="{Binding TriangleCountText}" Style="{StaticResource StatsValueStyle}"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                            <TextBlock Text="Physics Bodies: " Style="{StaticResource StatsLabelStyle}"/>
                            <TextBlock Text="{Binding PhysicsBodiesText}" Style="{StaticResource StatsValueStyle}"/>
                        </StackPanel>
                        
                        <Rectangle Style="{StaticResource StatsSeparatorStyle}"/>
                        
                        <!-- Memory -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Memory: " Style="{StaticResource StatsLabelStyle}"/>
                            <TextBlock Text="{Binding MemoryUsageText}" Foreground="{StaticResource MemoryOrangeBrush}" 
                                       FontSize="11" FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <!-- Memory Graph -->
                        <Grid Width="150" Height="40" Margin="0,5,0,0">
                            <Canvas>
                                <Line X1="0" Y1="0" X2="150" Y2="0" Stroke="{StaticResource GridLineHintBrush}" StrokeThickness="0.5"/>
                                <Line X1="0" Y1="20" X2="150" Y2="20" Stroke="{StaticResource GridLineHintBrush}" StrokeThickness="0.5"/>
                                <Line X1="0" Y1="40" X2="150" Y2="40" Stroke="{StaticResource GridLineHintBrush}" StrokeThickness="0.5"/>
                            </Canvas>
                            <Canvas ClipToBounds="True">
                                <Polyline Points="{Binding MemoryGraphPoints}" Stroke="{StaticResource MemoryOrangeBrush}" 
                                          StrokeThickness="1.5" StrokeLineJoin="Round"/>
                            </Canvas>
                            <TextBlock Text="500" Style="{StaticResource AxisLabelStyle}" FontSize="8" 
                                       HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBlock Text="0" Style="{StaticResource AxisLabelStyle}" FontSize="8" 
                                       HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                        </Grid>
                        
                        <Rectangle Style="{StaticResource StatsSeparatorStyle}"/>
                        
                        <!-- Camera -->
                        <TextBlock Text="Camera Position" Style="{StaticResource StatsLabelStyle}" FontSize="10"/>
                        <TextBlock Text="{Binding CameraPositionText}" Foreground="White" FontSize="10" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- View Label -->
                <Border Style="{StaticResource ViewLabelBorderStyle}" 
                        HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                    <TextBlock Text="PERSPECTIVE" Style="{StaticResource ViewLabelTextStyle}" FontSize="11"/>
                </Border>
            </Grid>
            
            <!-- Horizontal Splitter -->
            <GridSplitter Grid.Row="1" Height="3" Style="{StaticResource ViewportSplitterStyle}" ResizeDirection="Rows"/>
            
            <!-- Secondary Viewports -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Top View (X-Y Plane) -->
                <Grid Grid.Column="0">
                    <h:HelixViewport3D x:Name="TopViewport"
                                       Background="{StaticResource TopViewBackgroundBrush}"
                                       ShowCoordinateSystem="True"
                                       IsRotationEnabled="False" IsPanEnabled="True" IsZoomEnabled="True"
                                       ZoomExtentsWhenLoaded="False">
                        
                        <h:HelixViewport3D.Camera>
                            <OrthographicCamera Position="0,0,50" LookDirection="0,0,-1" UpDirection="0,1,0" Width="25"/>
                        </h:HelixViewport3D.Camera>

                        <ModelVisual3D>
                            <ModelVisual3D.Content><AmbientLight Color="#808080"/></ModelVisual3D.Content>
                        </ModelVisual3D>
                        <ModelVisual3D>
                            <ModelVisual3D.Content><DirectionalLight Color="#FFFFFF" Direction="0,0,-1"/></ModelVisual3D.Content>
                        </ModelVisual3D>
                        
                        <!-- Ground indicator -->
                        <h:RectangleVisual3D Width="20" Length="20" Origin="0,0,-0.01" Normal="0,0,1" LengthDirection="1,0,0">
                            <h:RectangleVisual3D.Material>
                                <DiffuseMaterial Brush="{StaticResource GridLineBrush}"/>
                            </h:RectangleVisual3D.Material>
                        </h:RectangleVisual3D>
                        
                        <h:GridLinesVisual3D Width="20" Length="20" MajorDistance="5" MinorDistance="1" 
                                             Thickness="0.02" Center="0,0,0.01"/>
                        
                        <!-- Arena boundary -->
                        <h:LinesVisual3D Color="#80FFFFFF" Thickness="3">
                            <h:LinesVisual3D.Points>
                                <Point3DCollection>
                                    -10,-10,0.1  10,-10,0.1  10,-10,0.1  10,10,0.1
                                    10,10,0.1  -10,10,0.1  -10,10,0.1  -10,-10,0.1
                                </Point3DCollection>
                            </h:LinesVisual3D.Points>
                        </h:LinesVisual3D>
                    </h:HelixViewport3D>
                    
                    <Border Style="{StaticResource ViewLabelBorderStyle}">
                        <TextBlock Text="TOP VIEW (X-Y)" Style="{StaticResource ViewLabelTextStyle}"/>
                    </Border>
                    
                    <TextBlock Text="X →" Style="{StaticResource AxisLabelStyle}" 
                               HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <TextBlock Text="↑ Y" Style="{StaticResource AxisLabelStyle}" 
                               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0">
                        <TextBlock.LayoutTransform><RotateTransform Angle="-90"/></TextBlock.LayoutTransform>
                    </TextBlock>
                </Grid>
                
                <!-- Vertical Splitter -->
                <GridSplitter Grid.Column="1" Width="3" Style="{StaticResource ViewportSplitterStyle}" ResizeDirection="Columns"/>
                
                <!-- Side View (Y-Z Plane) -->
                <Grid Grid.Column="2">
                    <h:HelixViewport3D x:Name="SagittalViewport"
                                       Background="{StaticResource SideViewBackgroundBrush}"
                                       ShowCoordinateSystem="True"
                                       IsRotationEnabled="False" IsPanEnabled="True" IsZoomEnabled="True"
                                       ZoomExtentsWhenLoaded="False">
                        
                        <h:HelixViewport3D.Camera>
                            <OrthographicCamera Position="30,0,2" LookDirection="-1,0,0" UpDirection="0,0,1" Width="25"/>
                        </h:HelixViewport3D.Camera>

                        <ModelVisual3D>
                            <ModelVisual3D.Content><AmbientLight Color="#808080"/></ModelVisual3D.Content>
                        </ModelVisual3D>
                        <ModelVisual3D>
                            <ModelVisual3D.Content><DirectionalLight Color="#FFFFFF" Direction="-1,0,-0.5"/></ModelVisual3D.Content>
                        </ModelVisual3D>
                        
                        <!-- Ground line -->
                        <h:LinesVisual3D Color="#80FFFFFF" Thickness="4">
                            <h:LinesVisual3D.Points>
                                <Point3DCollection>0,-15,0  0,15,0</Point3DCollection>
                            </h:LinesVisual3D.Points>
                        </h:LinesVisual3D>
                        
                        <!-- Arena boundaries -->
                        <h:LinesVisual3D Color="#40FFFFFF" Thickness="1">
                            <h:LinesVisual3D.Points>
                                <Point3DCollection>
                                    0,-10,0  0,-10,6  0,10,0  0,10,6
                                </Point3DCollection>
                            </h:LinesVisual3D.Points>
                        </h:LinesVisual3D>
                        
                        <!-- Grid lines -->
                        <h:LinesVisual3D Color="#30FFFFFF" Thickness="0.5">
                            <h:LinesVisual3D.Points>
                                <Point3DCollection>
                                    0,-12,1  0,12,1  0,-12,2  0,12,2  0,-12,3  0,12,3  0,-12,4  0,12,4
                                    0,-5,0  0,-5,5  0,0,0  0,0,5  0,5,0  0,5,5
                                </Point3DCollection>
                            </h:LinesVisual3D.Points>
                        </h:LinesVisual3D>
                    </h:HelixViewport3D>
                    
                    <Border Style="{StaticResource ViewLabelBorderStyle}">
                        <TextBlock Text="SIDE VIEW (Y-Z)" Style="{StaticResource ViewLabelTextStyle}"/>
                    </Border>
                    
                    <TextBlock Text="Y →" Style="{StaticResource AxisLabelStyle}" 
                               HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    <TextBlock Text="↑ Z" Style="{StaticResource AxisLabelStyle}" 
                               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0">
                        <TextBlock.LayoutTransform><RotateTransform Angle="-90"/></TextBlock.LayoutTransform>
                    </TextBlock>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
